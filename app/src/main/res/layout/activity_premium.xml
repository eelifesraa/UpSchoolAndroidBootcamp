<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PremiumActivity"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageView
            android:id="@+id/premium_image"
            android:layout_width="247dp"
            android:layout_height="236dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic__llustration" />

        <TextView
            android:id="@+id/premium_text"
            style="@style/EntryTitleStyle"
            android:layout_width="247dp"
            android:layout_height="96dp"
            android:layout_marginTop="28dp"
            android:text="Get unlimited access!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/premium_image" />

        <Button
            android:id="@+id/premium_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="184dp"
            android:backgroundTint="#2C2B47"
            android:fontFamily="@font/acme"
            android:text="Go Premium"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/premium_text" />

        <ImageView
            android:id="@+id/rectangle_image1"
            android:layout_width="150dp"
            android:layout_height="116dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:foregroundGravity="right"
            android:foregroundTintMode="add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/premium_text"
            app:srcCompat="@drawable/ic_rectangle" />

        <ImageView
            android:id="@+id/rectangle_image2"
            android:layout_width="150dp"
            android:layout_height="116dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:foregroundGravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rectangle_image1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_image1"
            app:srcCompat="@drawable/ic_rectangle" />

        <TextView
            android:id="@+id/permonth_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/acme"
            android:text="per month"
            android:textColor="#B9B8C6"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image2"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_image1"
            app:layout_constraintVertical_bias="0.612" />

        <TextView
            android:id="@+id/peryear_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/acme"
            android:text="per year"
            android:textColor="#B9B8C6"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image1"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image1"
            app:layout_constraintTop_toBottomOf="@+id/permonth_text1"
            app:layout_constraintVertical_bias="0.384" />

        <TextView
            android:id="@+id/permonth_tex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/acme"
            android:text="per month"
            android:textColor="#B9B8C6"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image2"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image2"
            app:layout_constraintTop_toTopOf="@+id/rectangle_image2"
            app:layout_constraintVertical_bias="0.602" />


        <TextView
            android:id="@+id/peryear_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/acme"
            android:text="per year"
            android:textColor="#B9B8C6"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image2"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image2"
            app:layout_constraintTop_toBottomOf="@+id/permonth_tex2"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:id="@+id/permonthvalue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="$11.99"
            android:textColor="#2C2B47"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image1"
            app:layout_constraintHorizontal_bias="0.254"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_image1" />

        <TextView
            android:id="@+id/permonthvalue_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/acme"
            android:text="$11.99 "
            android:textColor="#87869E"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/permonth_text1"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image1"
            app:layout_constraintTop_toBottomOf="@+id/permonthvalue_text"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/permonthvalue_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/acme"
            android:text="$143.99  "
            android:textColor="#87869E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image1"
            app:layout_constraintEnd_toStartOf="@+id/peryear_text1"
            app:layout_constraintHorizontal_bias="0.962"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image1"
            app:layout_constraintTop_toBottomOf="@+id/permonthvalue_text1"
            app:layout_constraintVertical_bias="0.111"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/permonthvalue_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="$4.99 "
            android:textColor="#2C2B47"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image2"
            app:layout_constraintHorizontal_bias="0.295"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image2"
            app:layout_constraintTop_toTopOf="@+id/rectangle_image2" />


        <TextView
            android:id="@+id/permonth499"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/acme"
            android:text="$4.99 "
            android:textColor="#87869E"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/permonth_tex2"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image2"
            app:layout_constraintTop_toBottomOf="@+id/permonthvalue_text2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/peryear5999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/acme"
            android:text="$59.99"
            android:textColor="#87869E"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image2"
            app:layout_constraintEnd_toStartOf="@+id/peryear_text2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/rectangle_image2"
            app:layout_constraintTop_toBottomOf="@+id/permonth499"
            app:layout_constraintVertical_bias="0.272"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image1"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image1"
            app:srcCompat="@drawable/ic_rectangle_blue" />


        <ImageView
            android:id="@+id/imagered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_image2"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_image2"
            app:srcCompat="@drawable/ic_rectangle_red" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:text="Monthly"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageblue"
            app:layout_constraintEnd_toEndOf="@+id/imageblue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageblue"
            app:layout_constraintTop_toTopOf="@+id/imageblue" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/acme"
            android:text="Yearly"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imagered"
            app:layout_constraintEnd_toEndOf="@+id/imagered"
            app:layout_constraintStart_toStartOf="@+id/imagered"
            app:layout_constraintTop_toTopOf="@+id/imagered" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>